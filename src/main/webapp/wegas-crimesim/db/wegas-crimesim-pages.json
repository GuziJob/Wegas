[{
        "id": 1,
        "label": "Main layout",
        "@class": "Page",
        "type": "List",
        "cssClass": "layout",
        "children": [{
                "label": "Indicators",
                "type": "List",
                "cssClass": "header",
                "direction": "horizontal",
                "children": [{
                        "type": "VariableDisplay",
                        "label": "Period",
                        "view": "valuebox",
                        "variable": "period",
                        "dataSource": "VariableDescriptor"
                    },{
                        "type": "Button",
                        "label": "Next period",
                        "view": "button",
                        "onClick": "importPackage(com.wegas.core.script);\nperiod.value += 1;\nvar qdf = Factory.lookupBean(\"QuestionDescriptorFacade\");\nqdf.setCurrentTime(evidences.descriptor, self, period.value);\nhumanResources.value = 15;\n"
                    },{
                        "type": "VariableDisplay",
                        "label": "Costs",
                        "view": "text",
                        "variable": "cost",
                        "dataSource": "VariableDescriptor"
                    },{
                        "type": "VariableDisplay",
                        "label": "Human resources",
                        "variable": "humanResources",
                        "view": "box",
                        "dataSource": "VariableDescriptor"
                    }]
            },
            {
                "id":"menu",
                "label": "Menu",
                "type": "List",
                "cssClass": "menu",
                "direction": "horizontal",
                "children": [{
                        "type": "Button",
                        "label": "Accueil",
                        "targetPageLoaderId": "maindisplayarea",
                        "cssClass": "menu-button",
                        "subpageId": 2
                    },{
                        "type": "Button",
                        "label": "Questions",
                        "targetPageLoaderId": "maindisplayarea",
                        "cssClass": "menu-button",
                        "subpageId": 3,
                        "plugins": [{
                                "fn": "UnreadCount",
                                "cfg": {
                                    "variable": "questions"
                                }
                            }]
                    }, {
                        "type": "Button",
                        "label": "Pi√®ces",
                        "targetPageLoaderId": "maindisplayarea",
                        "cssClass": "menu-button",
                        "subpageId": 4
                    },{
                        "type": "Button",
                        "label": "Mails",
                        "targetPageLoaderId": "maindisplayarea",
                        "cssClass": "menu-button",
                        "subpageId": 5,
                        "plugins": [{
                                "fn": "UnreadCount",
                                "cfg": {
                                    "variable": "inbox"
                                }
                            }]
                    },{
                        "type": "LoginButton",
                        "cssClass": "menu-loginbutton"
                    }]
            }, {
                "type": "PageLoader",
                "id": "maindisplayarea",
                "cssClass": "body",
                "pageId": 2
            }]
    },{
        "id": 2,
        "type": "Text",
        "content": "Welcome to CrimeSim."
    },{
        "id": 3,
        "type": "MCQTabView",
        "listDescriptorName": "questions"
    },{
