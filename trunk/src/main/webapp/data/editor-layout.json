{
    "type" : "Layout",
    
    "right": {
        "width": 500, 
        "resize": true,
        "collapse": false,
        "scroll": true, 
        "animate": true,
        "children": [{
            "type": "TabView",
            "children": [{
                "type": "Tab",
                "label": "Edit",
                "toolbarLabel": "Edit",
                "children": [
                {
                    "type": "DisplayArea",
                    "id": "editor-editdisplayarea"
                }
                ]
            },
            {
                "type": "Tab",
                "label": "CSS",
                "toolbarLabel": "Edit CSS",
                "children": [
                {
                    "type": "CSSEditor",
                    "class": "wegas-csseditor"
                }
                ]
            },
            {
                "type": "Tab",
                "label": "Chat",
                "toolbarLabel": "Chat",
                "children": [
                {
                    "type": "Chat"		
                }
                ]
            },
            {
                "type": "Tab",
                "label": "Log",
                "toolbarLabel": "Log",
                "children": [
                {
                    "type": "Logger"		
                }
                ]
            }]
        }]
    },
    "top" : {
        "height": 25,
        "scroll": null, 
        "zIndex": 2,
        "children": [
        {
            "type": "Text",
            "content": "Menu"
        }
        ]
    },
    "left": {
        "width": 300, 
        "resize": true, 
        "scroll": true,
        "animate": true,
        "children": [{
            "type": "TabView",
            "children": [
            {
                "type": "Tab",
                "label": "Variables",
                "children": [
                {
                    "type": "WTreeView",
                    "dataSource": "VariableDescriptor",
                    "rootClass": "VariableDescriptor"
                }         
                ],
                "toolbarButtons": [{
                    "type": "push", 
                    "label": "New variable", 
                    "value": "new", 
                    "id": "new"
                },{
                    "type": "push", 
                    "label": "Reset this game", 
                    "value": "reset", 
                    "id": "reset"
                }]
            },
            {
                "type": "Tab",
                "label": "Teams",
                "children": [
                {
                    "type": "WTreeView",
                    "dataSource": "Team",
                    "rootClass": "Team"
                }
                ]
            },
            {
                "type": "Tab",
                "label": "Users",
                "children": [
                {
                    "type": "DataTable",
                    "dataSource": "User",
                    "columnset": [ {
                        "key":"id", 
                        "sortable": true
                    }, {
                        "key":"name", 
                        "sortable": true
                    }, {
                        "key":"@class"
                    }]
                }
                ]
            }
            ]
        }]
    },
    "center": {
        "children": [{
            "type": "TabView",
            "children": [
            {
                "type": "Tab",
                "label": "Preview",
                "toolbarButtons": [
                {
                    "type": "select", 
                    "label": "Francois", 
                    "value": "selectuser",
                    "menu": [
                    {
                        "text": "Francois", 
                        "checked": true
                    },
                    {
                        "text": "Roger"
                    },
                    {
                        "text": "Dominique"
                    },
                    {
                        "text": "Marc"
                    }
                    ]
                }
                ],
                "children": [{
                    "type": "WidgetLoader",
                    "layourUrl": "data/pmg-layout.json"
                }]
            },
            {
                "type": "Tab",
                "label": "Game models explorer",
                "children": [
                {
                    "type": "DataTable",
                    "dataSource": "gameModel",
                    "columnset": [ {
                        "key":"id", 
                        "sortable": true
                    }, {
                        "key":"name", 
                        "sortable": true
                    }, {
                        "key":"@class"
                    }]
                }
                ]
            }
            ]
        }]
    }
}